<configuration>

	<shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/api-synology-chatbot.txt</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/archive/api-synology-chatbot.%d{yyyy-MM-dd}.txt</fileNamePattern>
            <!-- keep 1 days' worth of history -->
            <maxHistory>5</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%-14thread] %-5level %logger{45} - %msg%n</pattern>
        </encoder>
    </appender>

	<logger name="fr.aumjaud.antoine" level="DEBUG"/>

    <root level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
    </root>

</configuration>
